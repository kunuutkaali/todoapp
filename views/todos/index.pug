extends ../layout
block content
    div.wrapper
        include ../includes/_usermenu
        h1 Todos 
        .todos-overview
            if(locals.active)
                .todo-active
                    h2 Active todos
                    each todo in active
                        .todo-small
                            p Title:
                                strong 
                                    =todo.title
                            p Start: 
                                strong 
                                    =todo.startDate.toLocaleString("da-dk", {day:"2-digit", month:"2-digit", year:"2-digit"})
                            p Deadline: 
                                strong 
                                    =todo.deadline.toLocaleString("da-dk", {day:"2-digit", month:"2-digit", hour:"2-digit", minute:"2-digit"})
                            if(!todo.done)
                                p Status:
                                    strong Not done
                            else 
                                p Status:
                                    strong Done
            if(locals.dead)
                .todo-active
                    h2 Overdue todos
                    each todo in dead
                        .todo-small
                            p Title:
                                strong 
                                    =todo.title
                            p Start: 
                                strong 
                                    =todo.startDate.toLocaleString("da-dk", {day:"2-digit", month:"2-digit", year:"2-digit"})
                            p Deadline: 
                                strong 
                                    =todo.deadline.toLocaleString("da-dk", {day:"2-digit", month:"2-digit", hour:"2-digit", minute:"2-digit"})
                            if(!todo.done)
                                p Status:
                                    strong Not done
                            else 
                                p Status:
                                    strong Done
            if(locals.future)
                .todo-future
                    h2 Future todos
                    each todo in future
                        .todo-small
                            p Title:
                                strong 
                                    =todo.title
                            p Start: 
                                strong 
                                    =todo.startDate.toLocaleString("da-dk", {day:"2-digit", month:"2-digit", year:"2-digit"})
                            p Deadline: 
                                strong 
                                    =todo.deadline.toLocaleString("da-dk", {day:"2-digit", month:"2-digit", hour:"2-digit", minute:"2-digit"})
                            if(!todo.done)
                                p Status:
                                    strong Not done
                            else 
                                p Status:
                                    strong Done
                            

